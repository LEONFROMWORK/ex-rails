<div class="min-h-screen flex items-center justify-center bg-background py-12 px-4 sm:px-6 lg:px-8">
  <div class="w-full max-w-md">
    <%= render Ui::CardComponent.new do |card| %>
      <% card.with_header do %>
        <div class="space-y-1 text-center">
          <h2 class="text-2xl font-bold tracking-tight">
            로그인
          </h2>
          <p class="text-sm text-muted-foreground">
            소셜 계정으로 간편하게 로그인하세요
          </p>
        </div>
      <% end %>
      
      <div class="p-6 space-y-6">
        <% if flash[:alert] %>
          <%= render Ui::AlertComponent.new(variant: :destructive) do %>
            <%= flash[:alert] %>
          <% end %>
        <% end %>
        
        <div class="space-y-4">
          <%= button_to "/auth/google_oauth2", method: :post, data: { turbo: false }, 
              class: "w-full flex items-center justify-center px-4 py-3 border border-border rounded-lg bg-background hover:bg-accent transition-colors duration-200 text-sm font-medium" do %>
            <svg class="mr-2 h-5 w-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            <span>Google로 계속하기</span>
          <% end %>
          
          <%= button_to "/auth/kakao", method: :post, data: { turbo: false }, 
              class: "w-full flex items-center justify-center px-4 py-3 border border-[#FEE500] rounded-lg bg-[#FEE500] hover:bg-[#FFDD00] transition-colors duration-200 text-sm font-medium text-black" do %>
            <svg class="mr-2 h-5 w-5" viewBox="0 0 24 24">
              <path fill="#000000" d="M12 1c-6.627 0-12 4.208-12 9.399 0 3.356 2.246 6.301 5.625 7.963-1.678 5.784-2.664 11.014-2.648 11.014.102 0 7.023-5.385 7.023-5.385 6.627 0 12-4.208 12-9.399s-5.373-9.592-12-9.592z"/>
            </svg>
            <span>카카오로 계속하기</span>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>