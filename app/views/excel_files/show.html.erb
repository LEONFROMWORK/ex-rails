<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8" 
     data-controller="excel-analysis"
     data-excel-analysis-file-id-value="<%= @excel_file.id %>"
     data-excel-analysis-user-id-value="<%= current_user.id %>"
     data-excel-analysis-current-status-value="<%= @excel_file.status %>">
  <div class="mb-8">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900"><%= @excel_file.original_name %></h1>
        <p class="mt-1 text-sm text-gray-500">
          Uploaded <%= @excel_file.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </p>
      </div>
      <div class="mt-4 sm:mt-0 flex items-center space-x-3">
        <span data-excel-analysis-target="status" class="<%= case @excel_file.status
          when 'processing' then 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-yellow-100 text-yellow-800'
          when 'analyzed' then 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800'
          when 'failed' then 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800'
          else 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800'
        end %>">
          <%= @excel_file.status.capitalize %>
        </span>
        
        <!-- Connection status indicator -->
        <div class="flex items-center">
          <div data-connection-status class="w-2 h-2 bg-gray-400 rounded-full"></div>
          <span class="ml-1 text-xs text-gray-500">Connection</span>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-3">
    <!-- File Information -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Real-time Progress Section -->
      <div data-progress-container style="display: none;">
        <%= render Ui::CardComponent.new do |card| %>
          <% card.with_header do %>
            <h2 class="text-lg font-medium text-gray-900">Analysis Progress</h2>
          <% end %>
          
          <div class="space-y-4">
            <div data-excel-analysis-target="message" class="text-sm text-gray-600">
              Initializing analysis...
            </div>
            
            <div class="w-full bg-gray-200 rounded-full h-2">
              <div data-excel-analysis-target="progressBar" 
                   class="bg-blue-600 h-2 rounded-full transition-all duration-300" 
                   style="width: 0%"
                   role="progressbar" 
                   aria-valuenow="0" 
                   aria-valuemin="0" 
                   aria-valuemax="100">
              </div>
            </div>
            
            <div class="flex justify-between items-center">
              <span data-excel-analysis-target="progress" class="text-sm font-medium text-gray-900">0%</span>
              <button data-action="click->excel-analysis#cancelAnalysis"
                      data-excel-analysis-target="cancelButton"
                      class="text-sm text-red-600 hover:text-red-700"
                      style="display: none;">
                Cancel Analysis
              </button>
            </div>
          </div>
        <% end %>
      </div>
      <%= render Ui::CardComponent.new do |card| %>
        <% card.with_header do %>
          <h2 class="text-lg font-medium text-gray-900">File Information</h2>
        <% end %>
        
        <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
          <div>
            <dt class="text-sm font-medium text-gray-500">File Size</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @excel_file.human_file_size %></dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Format</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @excel_file.file_format.upcase %></dd>
          </div>
          <% if @excel_file.metadata.present? %>
            <div>
              <dt class="text-sm font-medium text-gray-500">Sheets</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= @excel_file.sheet_count || '—' %></dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Total Rows</dt>
              <dd class="mt-1 text-sm text-gray-900"><%= number_with_delimiter(@excel_file.row_count) || '—' %></dd>
            </div>
          <% end %>
        </dl>
      <% end %>

      <!-- Analysis Results -->
      <% if @latest_analysis %>
        <%= render Ui::CardComponent.new do |card| %>
          <% card.with_header do %>
            <h2 class="text-lg font-medium text-gray-900">Analysis Results</h2>
          <% end %>
          
          <div class="space-y-4">
            <% if @latest_analysis.completed? %>
              <div class="bg-gray-50 p-4 rounded-lg">
                <p class="text-sm text-gray-700">
                  <%= @latest_analysis.analysis_summary %>
                </p>
              </div>
              
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-red-50 p-4 rounded-lg">
                  <p class="text-sm font-medium text-red-800">Errors Found</p>
                  <p class="mt-1 text-2xl font-semibold text-red-900"><%= @latest_analysis.error_count %></p>
                </div>
                <div class="bg-green-50 p-4 rounded-lg">
                  <p class="text-sm font-medium text-green-800">Errors Fixed</p>
                  <p class="mt-1 text-2xl font-semibold text-green-900"><%= @latest_analysis.fixed_count %></p>
                </div>
              </div>
              
              <% if @latest_analysis.detected_errors.present? %>
                <div>
                  <h3 class="text-sm font-medium text-gray-900 mb-2">Detected Issues</h3>
                  <div class="space-y-2">
                    <% @latest_analysis.detected_errors.each do |error| %>
                      <div class="bg-white border border-gray-200 rounded-lg p-3">
                        <div class="flex items-start">
                          <div class="flex-shrink-0">
                            <% case error['severity'] %>
                            <% when 'high' %>
                              <svg class="h-5 w-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                              </svg>
                            <% when 'medium' %>
                              <svg class="h-5 w-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                              </svg>
                            <% else %>
                              <svg class="h-5 w-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                              </svg>
                            <% end %>
                          </div>
                          <div class="ml-3 flex-1">
                            <p class="text-sm font-medium text-gray-900"><%= error['message'] %></p>
                            <p class="mt-1 text-sm text-gray-500">
                              <%= error['cell'] || error['cells']&.join(', ') %>
                              <% if error['description'] %>
                                - <%= error['description'] %>
                              <% end %>
                            </p>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            <% elsif @latest_analysis.processing? %>
              <div class="text-center py-8">
                <svg class="animate-spin mx-auto h-8 w-8 text-blue-600" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="mt-2 text-sm text-gray-500">Analysis in progress...</p>
              </div>
            <% else %>
              <div class="text-center py-8">
                <p class="text-sm text-red-600">Analysis failed. Please try again.</p>
              </div>
            <% end %>
          </div>
        <% end %>
      <% end %>
      
      <!-- Real-time Analysis Results -->
      <div data-excel-analysis-target="results" class="hidden">
        <!-- Results will be populated by JavaScript -->
      </div>
    </div>

    <!-- Actions Sidebar -->
    <div class="space-y-6">
      <%= render Ui::CardComponent.new do |card| %>
        <% card.with_header do %>
          <h2 class="text-lg font-medium text-gray-900">Actions</h2>
        <% end %>
        
        <div class="space-y-3">
          <% if @excel_file.uploaded? || @excel_file.failed? %>
            <button data-action="click->excel-analysis#requestAnalysis"
                    data-excel-analysis-target="analyzeButton"
                    class="w-full inline-flex justify-center items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 disabled:opacity-50 disabled:cursor-not-allowed">
              <svg class="mr-2 -ml-1 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
              </svg>
              Start Analysis
            </button>
          <% end %>
          
          <button data-action="click->excel-analysis#refreshStatus"
                  class="w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="mr-2 -ml-1 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Refresh Status
          </button>
          
          <% if @latest_analysis&.completed? && @latest_analysis.corrections.present? %>
            <%= link_to download_corrected_excel_file_path(@excel_file),
                class: "w-full inline-flex justify-center items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
              <svg class="mr-2 -ml-1 h-5 w-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
              </svg>
              Download Corrected
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% if @latest_analysis %>
        <%= render Ui::CardComponent.new do |card| %>
          <% card.with_header do %>
            <h2 class="text-lg font-medium text-gray-900">Analysis Details</h2>
          <% end %>
          
          <dl class="space-y-3">
            <div>
              <dt class="text-sm font-medium text-gray-500">AI Model Used</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @latest_analysis.tier_name %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Confidence Score</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= (@latest_analysis.confidence_score * 100).round %>%
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Tokens Used</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @latest_analysis.tokens_used %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Time Saved</dt>
              <dd class="mt-1 text-sm text-gray-900">
                ~<%= @latest_analysis.estimated_time_saved %> minutes
              </dd>
            </div>
          </dl>
        <% end %>
      <% end %>
      
      <!-- User Tokens Display -->
      <%= render Ui::CardComponent.new do |card| %>
        <% card.with_header do %>
          <h2 class="text-lg font-medium text-gray-900">Your Account</h2>
        <% end %>
        
        <dl class="space-y-3">
          <div>
            <dt class="text-sm font-medium text-gray-500">Available Tokens</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <span data-user-tokens><%= current_user.tokens %></span> tokens
            </dd>
          </div>
          <div>
            <dt class="text-sm font-medium text-gray-500">Account Tier</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= case current_user.tier
                when 'free' then 'bg-gray-100 text-gray-800'
                when 'basic' then 'bg-blue-100 text-blue-800'
                when 'pro' then 'bg-purple-100 text-purple-800'
                when 'enterprise' then 'bg-gold-100 text-gold-800'
                else 'bg-gray-100 text-gray-800'
              end %>">
                <%= current_user.tier.capitalize %>
              </span>
            </dd>
          </div>
        </dl>
      <% end %>
    </div>
  </div>
</div>